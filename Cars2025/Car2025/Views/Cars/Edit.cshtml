@model Car2025.Models.Cars.CarCreateUpdateViewModel

<h2>Edit Car</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Manufacturer</label>
        <input class="form-control" asp-for="Manufacturer" />
    </div>

    <div class="mb-3">
        <label class="form-label">Model Name</label>
        <input class="form-control" asp-for="ModelName" />
    </div>

    <div class="mb-3">
        <label class="form-label">Production Year</label>
        <input class="form-control" asp-for="ProductionYear" type="number" />
    </div>

    <div class="mb-3">
        <label class="form-label">Sale Price</label>
        <input class="form-control" asp-for="SalePrice" type="number" step="0.01" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
