@model Car2025.Models.Cars.CarCreateUpdateViewModel

<div class="card">
    <div class="card-header text-white text-center">
        <h1>@(Model.Id.HasValue ? "Update Car" : "Create New Car")</h1>
    </div>
    <div class="card-body">
        <form asp-action="@(Model.Id.HasValue ? "Edit" : "Create")" method="post">
            <input asp-for="Id" type="hidden" />
            <input asp-for="CreatedAt" type="hidden" />
            <input asp-for="ModifiedAt" type="hidden" />

            <h4>Car Details</h4>
            <hr />
            <div class="form-group">
                <label asp-for="Manufacturer" class="form-label">Manufacturer:</label>
                <input asp-for="Manufacturer" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="ModelName" class="form-label">Model Name:</label>
                <input asp-for="ModelName" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="ProductionYear" class="form-label">Production Year:</label>
                <input asp-for="ProductionYear" class="form-control" type="number" required />
            </div>
            <div class="form-group">
                <label asp-for="SalePrice" class="form-label">Sale Price:</label>
                <input asp-for="SalePrice" class="form-control" type="number" step="0.01" required />
            </div>

            <hr />
            <div class="form-actions">
                <button type="submit" class="btn btn-success">@(Model.Id.HasValue ? "Update" : "Create")</button>
                <a asp-action="Index" asp-controller="cars" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>

<style>
    .card {
        background-color: #1b4332;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        margin: 20px auto;
        max-width: 800px;
    }

    .card-header {
        text-align: center;
    }

    .form-actions {
        display: flex;
        justify-content: space-between;
    }

    .form-group {
        margin-bottom: 1rem;
    }
</style>
